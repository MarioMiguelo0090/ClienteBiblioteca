<Page x:Class="ClienteBibliotecaElSaber.Ventanas.VentanaDetallesSocio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteBibliotecaElSaber.Ventanas"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="920"
      Title="VentanaRegistroLibro">

    <Grid Background="#F5F5DC">
        <Border Background="#FF432716" CornerRadius="10" Padding="10" Margin="136,39,155,463">
            <TextBlock Text="Detalles del Libro"
           Foreground="White"
           FontSize="42"
           FontWeight="Bold"
           TextAlignment="Center"
           VerticalAlignment="Center"/>
        </Border>

        <Image Source="/Imagenes/Logo Positivo.png"
           Width="144"
           HorizontalAlignment="Left"
           Margin="770,23,0,410"/>

        <Label Content="Nombre(s):" FontWeight="Bold" FontSize="20" Margin="40,242,760,326"/>
        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Margin="160,242,482,326">
            <TextBlock x:Name="txb_Titulo" FontSize="18" Margin="118,242,524,326" />
        </Border>


        <Label Content="Primer &#xD;&#xA;Apellido:" FontWeight="Bold" FontSize="20" Margin="477,229,335,308"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="590,243,42,322">
            <TextBlock x:Name="txb_Autor" FontSize="18"/>
        </Border>

        <Label Content="Segundo &#xD;&#xA;Apellido:" FontWeight="Bold" FontSize="20" Margin="40,288,778,238" RenderTransformOrigin="0.531,0.273"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="160,307,482,259">
            <TextBlock x:Name="txb_Genero" FontSize="18" Margin="1,1,-1,-1"/>
        </Border>

        <Label Content="Teléfono:" FontWeight="Bold" FontSize="20" Margin="476,306,335,259"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="590,306,42,259">
            <TextBlock x:Name="txb_Edicion" FontSize="18"/>
        </Border>

        <Label Content="Dirección:" FontWeight="Bold" FontSize="20" Margin="40,360,765,201"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="160,359,482,202">
            <TextBlock x:Name="txb_Folio" FontSize="18"/>
        </Border>

        <Label Content="CP:" FontWeight="Bold" FontSize="20" Margin="478,362,336,204"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="590,362,42,204">
            <TextBlock x:Name="txb_Clasificacion" FontSize="18"/>
        </Border>

        <Label Content="Fecha de &#xD;&#xA;Nacimiento:" FontWeight="Bold" FontSize="20" Margin="40,437,751,93"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="174,447,524,103">
            <TextBlock x:Name="txb_FechaPublicacion" FontSize="18" Margin="-1,0,9,34"/>
        </Border>

        <Label Content="Fecha de &#xD;&#xA;Inscripción:" FontWeight="Bold" FontSize="20" Margin="476,447,315,83"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="590,452,108,98">
            <TextBlock x:Name="txb_FechaInscripcion" FontSize="18" Margin="-1,0,9,34"/>
        </Border>

        <Button Content="Regresar"
            Background="Red"
            Foreground="White"
            FontWeight="Bold"
            Margin="384,525,384,29"
            Click="Regresar_Click"/>
    </Grid>


</Page>
