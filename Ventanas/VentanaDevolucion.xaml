<Window x:Class="ClienteBibliotecaElSaber.Ventanas.VentanaDevolucion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteBibliotecaElSaber.Ventanas"
      mc:Ignorable="d" 
      Title="VentanaDevolucion" Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

    <Grid Background="#F5F5DC">
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="330"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Background="#FF432716"
                CornerRadius="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="110,25">
            <TextBlock Text="Devolución" 
                       FontSize="42"
                       Foreground="White"
                       FontWeight="Bold"/>
        </Border>
        <Image Source="/Imagenes/Logo Positivo.png"
               HorizontalAlignment="Right"
               Width="120"
               Margin="0,0,30,0"/>
        <Grid Grid.Row="1">
            <TextBox Height="36.6"
                     Width="750"/>
            <Button HorizontalAlignment="Right"
                    Margin="0,0,85,0"
                    Background="Transparent">
                <Image Source="/Imagenes/Iconos/BuscarOscuro.png"
                       Height="20"/>
            </Button>
        </Grid>
        <Grid Grid.Row="2"
              Margin="80,20">
            
        </Grid>
        <Grid Grid.Row="3">
            <Button Content="Cancelar"
                    HorizontalAlignment="Right"
                    Margin="0,0,80,0"
                    Width="150"
                    Background="Red"
                    Foreground="White"/>
        </Grid>
    </Grid>
</Window>
