<Window x:Class="ClienteBibliotecaElSaber.Ventanas.VentanaRegistroLibro"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteBibliotecaElSaber.Ventanas"
      mc:Ignorable="d" 
      Title="VentanaRegistroLibro" Height="600" Width="920"
    WindowStyle="None"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    Background="Transparent"
    AllowsTransparency="True">

    <Grid Background="#F5F5DC" Margin="0,-8,0,8">

        <Border Background="#FF432716" CornerRadius="10" Padding="10" Margin="136,39,155,463">
            <TextBlock Text="Registrar Libro"
               Foreground="White"
               FontSize="42"
               FontWeight="Bold"
               TextAlignment="Center"
               VerticalAlignment="Center"/>
        </Border>

        <Image Source="/Imagenes/Logo Positivo.png"
               Width="144"
               HorizontalAlignment="Left"
               Margin="770,23,0,410"/>

        <Label Content="Para registrar un libro por favor rellene los siguientes campos solicitados." FontWeight="Bold" FontSize="18" Margin="136,143,155,425"/>

        <Label Content="Título:" FontWeight="Bold" FontSize="20" Margin="48,198,752,354"/>
        <TextBox Width="Auto" Height="Auto" Margin="128,200,514,363"/>

        <Label Content="Autor(es):" FontWeight="Bold" FontSize="20" Margin="477,192,335,352"/>
        <ComboBox x:Name="cbAutor" IsEditable="True" Margin="593,198,39,366" LostFocus="Autor_BusquedaPerdida"/>

        <Label Content="Género:" FontWeight="Bold" FontSize="20" Margin="35,245,799,305"/>
        <ComboBox Margin="128,250,514,310" SelectionChanged="ComboBox_Genero">
            <ComboBoxItem Content="Ficción"/>
            <ComboBoxItem Content="Suspenso"/>
            <ComboBoxItem Content="Novela histórica"/>
            <ComboBoxItem Content="Romántico"/>
            <ComboBoxItem Content="Ciencia Ficción"/>
            <ComboBoxItem Content="Distopía"/>
            <ComboBoxItem Content="Aventuras"/>
            <ComboBoxItem Content="Fantasía"/>
            <ComboBoxItem Content="Terror"/>
            <ComboBoxItem Content="Paranormal"/>
            <ComboBoxItem Content="Poesía"/>
            <ComboBoxItem Content="Juvenil"/>
            <ComboBoxItem Content="Infantil"/>
            <ComboBoxItem Content="Autoayuda"/>
            <ComboBoxItem Content="Salud y deporte"/>
            <ComboBoxItem Content="Memorias"/>
            <ComboBoxItem Content="Biografías"/>
            <ComboBoxItem Content="Cocina"/>
            <ComboBoxItem Content="Viajes"/>
            <ComboBoxItem Content="Técnico"/>
            <ComboBoxItem Content="Divulgativos"/>
            <ComboBoxItem Content="Arte"/>
        </ComboBox>

        <Label Content="Edición:" FontWeight="Bold" FontSize="20" Margin="493,248,343,300" RenderTransformOrigin="0.307,0.523"/>
        <TextBox Width="Auto" Height="Auto" Margin="590,245,42,315"/>

        <Label Content="Folio:" FontWeight="Bold" FontSize="20" Margin="48,300,786,247"/>
        <TextBox Width="Auto" Height="Auto" Margin="128,300,514,257"/>

        <Label Content="Clasificación:" FontWeight="Bold" FontSize="20" Margin="453,300,293,246"/>
        <TextBox Width="Auto" Height="Auto" Margin="593,305,39,252" RenderTransformOrigin="0.487,0.168"/>

        <Label Content="ISBN:" FontWeight="Bold" FontSize="20" Margin="49,360,769,190"/>
        <TextBox Width="Auto" Height="Auto" Margin="128,360,514,195"/>

        <Label Content="Editorial:" FontWeight="Bold" FontSize="20" Margin="487,360,327,190"/>
        <ComboBox x:Name="cbEditorial" IsEditable="True" Margin="593,360,39,198" LostFocus="Editorial_BusquedaPerdida"/>

        <Label Content="Fecha de &#xD;&#xA;publicación:" FontWeight="Bold" FontSize="20" Margin="35,409,755,112"/>
        <Grid Margin="136,428,526,122">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="93*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="164*"/>
            </Grid.ColumnDefinitions>
            <Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="5" Height="30" Width="180" Margin="29,0,49,4" Grid.ColumnSpan="3"/>
            <Image Source="/Imagenes/Iconos/calendario.png" Width="38" HorizontalAlignment="Left" Margin="118,2,0,4" RenderTransformOrigin="1.021,0.477" Grid.Column="2"/>
            <DatePicker x:Name="dp_FechaNacimiento" Width="180" Height="30" Background="Transparent" BorderThickness="0" FontSize="16" Opacity="0" Margin="29,9,49,11" Grid.ColumnSpan="3"/>
        </Grid>

        <Button Content="Guardar"
                Background="Green"
                Foreground="White"
                FontWeight="Bold"
                Margin="495,541,274,14" Click="Guardar_Click"/>

        <Button Content="Cancelar"
                Background="Red"
                Foreground="White"
                FontWeight="Bold"
                Margin="671,539,98,15" Click="Cancelar_Click"/>
    </Grid>

</Window>
