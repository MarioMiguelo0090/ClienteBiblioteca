<Window x:Class="ClienteBibliotecaElSaber.Ventanas.VentanaEditarPrestamo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClienteBibliotecaElSaber.Ventanas"
        mc:Ignorable="d"
        Title="VentanaEditarPrestamo" Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    <Grid Background="#F5F5DC">
        <StackPanel Margin="20,30">
            <Grid>
                <Border Background="#FF432716"
                        CornerRadius="10"
                        Padding="80,25"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                    <TextBlock Text="Edición de préstamo"
                               FontSize="42"
                               Foreground="White"
                               FontWeight="Bold"/>
                </Border>
                <Image Source="/Imagenes/Logo Positivo.png"
                       HorizontalAlignment="Right"
                       Width="120"
                       Margin="0,0,10,0"/>
            </Grid>
            <StackPanel Margin="80,20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Titulo:"
                               FontSize="20"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"/>
                    <TextBox x:Name="txtb_Titulo"
                             Width="640"
                             MaxLength="50"
                             IsReadOnly="True"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="0,20">
                    <TextBlock Text="No. de socio:"
                               FontSize="20"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"/>
                    <TextBox x:Name="txtb_NoSocio"
                             Width="160"
                             Margin="0,0,40,0"
                             IsReadOnly="True"/>
                    <TextBlock Text="Fecha de inicio:"
                               FontSize="20"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"/>
                    <DatePicker x:Name="dp_FechaInicio"
                                FontSize="20" Width="221"
                                IsEnabled="False"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Notas:"
                               FontSize="20"
                               FontWeight="DemiBold"
                               VerticalAlignment="Top"
                               Margin="0,0,20,0"/>
                    <TextBox Padding="10"
                             Name="txtb_Notas"
                             Width="640"
                             Height="130"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             FontSize="20"
                             VerticalContentAlignment="Top"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="0,20">
                    <TextBlock Text="Fecha de devolución esperada:"
                               FontSize="20"
                               FontWeight="DemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"/>
                    <DatePicker FontSize="20"
                                Name="dtp_FechaDevolucion"/>
                </StackPanel>
                <Grid Margin="0,10">
                    <Button Content="Aceptar"
                            Width="150"
                            Background="Green"
                            Foreground="White"
                            Margin="0,0,180,0" 
                            Click="Aceptar_Click"
                            HorizontalAlignment="Right"/>
                    <Button Content="Cancelar"
                            Width="150"
                            Background="Red"
                            Foreground="White" 
                            Click="Cancelar_Click"
                            HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
