<Window x:Class="ClienteBibliotecaElSaber.Ventanas.VentanaGestionarMulta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClienteBibliotecaElSaber.Ventanas"
        xmlns:extensiones="clr-namespace:ClienteBibliotecaElSaber.Extensiones"
        mc:Ignorable="d"
        Title="VentanaGestionarMulta" Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    <Grid Background="#F5F5DC">
        <StackPanel Margin="20,30">
            <Grid>
                <Border Background="#FF432716"
                        CornerRadius="10"
                        Padding="80,25"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                    <TextBlock Text="Multas"
                               FontSize="42"
                               Foreground="White"
                               FontWeight="Bold"/>
                </Border>
                <Image Source="/Imagenes/Logo Positivo.png"
                       HorizontalAlignment="Right"
                       Width="120"
                       Margin="0,0,10,0"/>
            </Grid>
            <StackPanel Margin="100,25">
                <Grid Margin="0,0,0,20">
                    <TextBox x:Name="txtb_Buscador"
                             extensiones:TextBoxExtensiones.TextoSugerido="Número de socio"/>
                    <Button Width="50"
                            HorizontalAlignment="Right"
                            Margin="0,0"
                            Background="Transparent">
                        <Image Source="/Imagenes/Iconos/IconoBuscarOscuro.png"
                               Width="30"
                               Margin="0,3,0,0"/>
                    </Button>
                </Grid>
                <ListView x:Name="lw_prestamos" 
                          ItemsSource="{Binding Multas}"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          Height="250">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Black"
                                    BorderThickness="1"
                                    Margin="5"
                                    Padding="5"
                                    CornerRadius="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="{Binding Titulo}" 
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   TextWrapping="Wrap"
                                                   Width="100"
                                                   Margin="0,5,5,10"/>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="5,10">
                                            <TextBlock Text="Estado:" 
                                                       FontWeight="Bold"
                                                       Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding Estado}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="5,10">
                                            <TextBlock Text="Días de atraso:"
                                                       FontWeight="Bold"
                                                       Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding DiasAtraso}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="5,10">
                                            <TextBlock Text="Monto total:"
                                                       FontWeight="Bold"
                                                       Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding MontoTotal}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <Grid Grid.Column="1"
                                          Margin="25,0">
                                        <StackPanel VerticalAlignment="Center">
                                            <Button Content="Pagar"
                                                    Background="Blue"
                                                    Foreground="White"
                                                    FontSize="12"
                                                    Width="100"
                                                    Margin="0,10"
                                                    Click="Pagar_Click"/>
                                            <Image Source="/Imagenes/Iconos/IconoPagoOscuro.png" 
                                                   Width="50"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button Content="Cancelar"
                        Width="150"
                        Background="Red"
                        Foreground="White" 
                        Click="Cancelar_Click"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
