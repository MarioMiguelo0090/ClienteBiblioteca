<Window x:Class="ClienteBibliotecaElSaber.Ventanas.VentanaRegistrarSocio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteBibliotecaElSaber.Ventanas"
      mc:Ignorable="d" 
      Title="VentanaInicioDeSesion" Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">  
    <DockPanel>
        <Grid Background="#F5F5DC">

            <Border Background="#FF432716" CornerRadius="10" Padding="10" Margin="136,39,155,463">
                <TextBlock Text="Registrar Socio"
                   Foreground="White"
                   FontSize="42"
                   FontWeight="Bold"
                   TextAlignment="Center"
                   VerticalAlignment="Center"/> 
            </Border>

            <Image Source="/Imagenes/Logo Positivo.png"
               Width="144"
               HorizontalAlignment="Left"
               Margin="770,23,0,410"/>  

            <Label Content="Para registrar un socio por favor rellene los siguientes campos solicitados." FontWeight="Bold" FontSize="18" Margin="136,137,155,410"/>

            <Label Content="Nombre(s): " FontWeight="Bold" FontSize="20" Margin="26,196,774,355"/>
            <TextBox x:Name="txtb_Nombre" Width="Auto" Height="Auto" Margin="152,196,472,351"/>

            <Label Content="Primer &#xD;&#xA;Apellido:" FontWeight="Bold" FontSize="20" Margin="462,183,334,337"/>
            <TextBox x:Name="txtb_PrimerApellido" Width="Auto" Height="Auto" Margin="572,197,34,351"/>

            <Label Content="Segundo &#xA;Apellido:" FontWeight="Bold" FontSize="20" Margin="39,247,751,268"/>
            <TextBox x:Name="txtb_SegundoApellido" Width="Auto" Height="Auto" Margin="154,263,470,284"/>

            <Label Content="Teléfono:" FontWeight="Bold" FontSize="20" Margin="463,261,348,286" RenderTransformOrigin="0.307,0.523"/>
            <TextBox x:Name="txtb_Telefono" Width="Auto" Height="Auto" Margin="572,261,42,286"/>

            <Label Content="Dirección:" FontWeight="Bold" FontSize="20" Margin="39,324,775,227" RenderTransformOrigin="0.494,0.669"/>
            <TextBox x:Name="txtb_Direccion" Width="Auto" Height="Auto" Margin="154,324,469,223"/>

            <Label Content="CP:" FontWeight="Bold" FontSize="20" Margin="518,319,320,223"/>
            <TextBox x:Name="txtb_CodigoPostal" Width="Auto" Height="Auto" Margin="580,322,34,225"/>

            <Label Content="Fecha de &#xD;&#xA;Nacimiento:" FontWeight="Bold" FontSize="20" Margin="40,375,751,141"/>
            <Grid Margin="171,394,491,156">
                <Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="5" Height="30" Width="180"/>
                <Image Source="/Imagenes/Iconos/calendario.png" Width="38" HorizontalAlignment="Left" Margin="220,3,0,3" RenderTransformOrigin="1.021,0.477"/>
                <DatePicker x:Name="dp_FechaNacimiento" Width="180" Height="30" Background="Transparent" BorderThickness="0" FontSize="16" Opacity="0" Margin="25,10,29,10"/>
            </Grid>

            <Label Content="Fecha de &#xD;&#xA;Incripción:" FontWeight="Bold" FontSize="20" Margin="450,379,340,141"/>
            <Grid Margin="580,394,66,156">
                <Border Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="5" Height="30" Width="180"/>
                <Image Source="/Imagenes/Iconos/calendario.png" Width="42" HorizontalAlignment="Left" Margin="232,6,0,6" RenderTransformOrigin="1.092,0.567"/>
                <DatePicker x:Name="dp_FechaInscripcion" Height="30" Background="Transparent" BorderThickness="0" FontSize="16" Opacity="0" Margin="28,10,109,10"/>
            </Grid>

            <Button Content="Registrar"
                Background="Green"
                Foreground="White"
                FontWeight="Bold"
                Margin="547,533,222,10" Click="Registrar_Click"/>

            <Button Content="Cancelar"
                Background="Red"
                Foreground="White"
                FontWeight="Bold"
                Margin="727,533,42,10" Click="Cancelar_Click"/> 
        </Grid>
    </DockPanel>
</Window>
