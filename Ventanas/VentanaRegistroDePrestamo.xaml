<Window x:Class="ClienteBibliotecaElSaber.Ventanas.VentanaRegistroDePrestamo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteBibliotecaElSaber.Ventanas"
      mc:Ignorable="d" 
      Title="VentanaRegistroDePrestamo" Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

    <Grid Background="#F5F5DC">
        <StackPanel>
            <Grid>
                <Border Background="#FF432716"
                        CornerRadius="10"
                        Padding="50,25"
                        Margin="0,20,0,20"
                        HorizontalAlignment="Center">
                    <TextBlock Text="Registro de préstamo"
                               FontSize="42"
                               Foreground="White"
                               FontWeight="Bold"/>
                </Border>
                <Image Source="/Imagenes/Logo Positivo.png"
                   Width="120"
                   Margin="0,10,30,0"
                   HorizontalAlignment="Right"/>
            </Grid>
            <StackPanel Margin="70,20"
                        HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal"
                        Margin="50,0">
                    <TextBlock Text="ISBN:"
                               FontWeight="Bold"
                               FontSize="20"
                               Margin="0,0,50,0"
                           VerticalAlignment="Center"/>
                    <TextBox x:Name="Txb_ISBN" 
                             KeyDown="Buscar_Enter"
                             Width="570"
                             Margin="0,15"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="50,0">
                    <TextBlock Text="Número de socio:"
                           FontWeight="Bold"
                           FontSize="20"
                           Margin="0,0,50,0"
                           VerticalAlignment="Center"/>
                    <TextBox x:Name="Txb_NumeroSocio" 
                             KeyDown="Buscar_Enter"
                             Width="460"
                             Margin="0,15"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="50,0">
                    <TextBlock Text="Notas:"
                           FontWeight="Bold"
                           FontSize="20"
                           Margin="0,15,50,0"/>
                    <TextBox x:Name="Txb_Notas" 
                             KeyDown="Buscar_Enter"
                             AcceptsReturn="True"
                             VerticalContentAlignment="Top"
                             TextWrapping="Wrap"
                             Padding="15"
                             Width="565"
                             Height="100"
                             Margin="0,15"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                        Margin="50,15,50,30">
                    <TextBlock Text="Fecha de devolución:"
                           FontWeight="Bold"
                           FontSize="20"
                           Margin="0,0,50,0"
                           VerticalAlignment="Center"/>
                    <DatePicker x:Name="Dp_FechaDevolucion"
                                FontSize="16"
                                CalendarStyle="{StaticResource CustomCalendarStyle}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="50,0,50,30"
                            HorizontalAlignment="Right">
                    <Button Content="Aceptar"
                            Width="150"
                            Margin="20,0"
                            Background="Green"
                            Foreground="White" Click="Aceptar_Click"/>
                    <Button Content="Cancelar"
                            Width="150"
                            Background="Red"
                            Foreground="White" Click="Cancelar_Click"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
